# Enterprise ScryptMineOS Configuration
# SECURITY: This file contains sensitive information - CREATOR ACCESS ONLY
# All values are encrypted and access-controlled

# ===========================================
# ENTERPRISE SECURITY CONFIGURATION
# ===========================================

# Master encryption key (base64 encoded)
ENTERPRISE_ENCRYPTION_KEY=your_base64_encryption_key_here
ENTERPRISE_MASTER_PASSWORD=your_secure_master_password_here
ENTERPRISE_SALT=your_unique_salt_here

# System admin credentials (CREATOR ONLY)
SYSTEM_ADMIN_TOKEN=your_system_admin_token_here
ENTERPRISE_API_KEY=your_enterprise_api_key_here

# ===========================================
# CREATOR WALLET ADDRESSES (ENCRYPTED)
# ===========================================

# Creator's primary wallet addresses (CREATOR ACCESS ONLY)
CREATOR_LTC_ADDRESS=your_creator_ltc_address_here
CREATOR_DOGE_ADDRESS=your_creator_doge_address_here

# ===========================================
# DATABASE CONFIGURATION (ENCRYPTED)
# ===========================================

# MongoDB Atlas connection (CREATOR ACCESS ONLY)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mining_enterprise?retryWrites=true&w=majority

# Database encryption keys
DB_ENCRYPTION_KEY=your_database_encryption_key_here
DB_BACKUP_KEY=your_backup_encryption_key_here

# ===========================================
# POOL CONFIGURATION (PUBLIC)
# ===========================================

# F2Pool endpoints (accessible to all users)
LTC_POOL_HOST=ltc.f2pool.com
LTC_POOL_PORT=8888
DOGE_POOL_HOST=doge.zsolo.bid
DOGE_POOL_PORT=8057

# Regional endpoints
LTC_STRATUM_EU=ltc-euro.f2pool.com
LTC_STRATUM_NA=ltc-na.f2pool.com
LTC_STRATUM_ASIA=ltc-asia.f2pool.com

# ===========================================
# ENTERPRISE FEATURES
# ===========================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_TIMEOUT=30

# Monitoring
METRICS_PORT=9090
HEALTH_CHECK_PORT=8081
PROMETHEUS_ENDPOINT=/metrics

# Security
ALLOWED_ORIGINS=https://enterprise.scryptmineos.com
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# PRODUCTION DEPLOYMENT
# ===========================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/scryptmineos.crt
SSL_KEY_PATH=/etc/ssl/private/scryptmineos.key

# Load Balancing
LOAD_BALANCER_ENABLED=true
WORKER_PROCESSES=auto
MAX_CONNECTIONS=1000

# ===========================================
# ECONOMIC SAFEGUARDS (ENTERPRISE)
# ===========================================

# Global economic limits
MAX_POWER_COST=0.12
MIN_PROFITABILITY=0.01
EMERGENCY_SHUTDOWN_THRESHOLD=0.005

# Risk management
MAX_DAILY_LOSS=100.00
PROFIT_MARGIN_REQUIRED=0.15
AUTO_SWITCH_ENABLED=true

# ===========================================
# BACKUP AND RECOVERY
# ===========================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true

# Recovery settings
AUTO_RECOVERY_ENABLED=true
RECOVERY_TIMEOUT=300
FAILOVER_ENABLED=true

# ===========================================
# COMPLIANCE AND AUDITING
# ===========================================

# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=365
AUDIT_ENCRYPTION_ENABLED=true

# Compliance
GDPR_COMPLIANCE=true
SOC2_COMPLIANCE=true
PCI_COMPLIANCE=false

# ===========================================
# USER MANAGEMENT
# ===========================================

# Default user settings
DEFAULT_USER_ACCESS_LEVEL=user
MAX_USERS_PER_CREATOR=100
USER_SESSION_TIMEOUT=3600

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION=3600
REFRESH_TOKEN_ENABLED=true

# ===========================================
# PERFORMANCE OPTIMIZATION
# ===========================================

# Caching
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Database optimization
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# ===========================================
# MONITORING AND ALERTING
# ===========================================

# Grafana integration
GRAFANA_ENABLED=true
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_API_KEY=your_grafana_api_key_here

# Alerting
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_ALERTS_ENABLED=true
SMS_ALERTS_ENABLED=false

# ===========================================
# DEVELOPMENT OVERRIDES (DEV/STAGING ONLY)
# ===========================================

# Development settings (ignored in production)
DEV_MODE=false
DEV_WALLET_LTC=ltc1qtest...
DEV_WALLET_DOGE=DTest...
DEV_SKIP_VALIDATION=false

# Testing
TEST_MODE=false
MOCK_HARDWARE=false
SIMULATE_MINING=false
