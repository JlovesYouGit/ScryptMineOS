[Unit]
Description=Scrypt DOGE Mining System
After=network.target

[Service]
Type=simple
User=miner
WorkingDirectory=/opt/scrypt-miner
ExecStart=/opt/scrypt-miner/venv/bin/python main.py
Restart=always
RestartSec=10
Environment=MINING_ENV=production
Environment=PYTHONUNBUFFERED=1

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=scrypt-miner

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target